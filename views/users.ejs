<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <form action="/admin/users/search" method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" name="userid" class="form-control" placeholder="Search by User ID" required>
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </form>
        <h1 class="mb-4">All Registered Users</h1>

        <% if (users && users.length > 0) { %>
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.role %></td>
                            <td>
                                <a href="" class="btn btn-primary btn-sm">View</a>
                                <form action="" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No users found.</p>
        <% } %>

        <a href="/admin" class="btn btn-secondary mt-3">Back to Journal</a>
    </div>

</body>
</html>