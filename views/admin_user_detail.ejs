<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Detail (Admin View)</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        th {
            text-align: center;
        }
    </style>
</head>
<body class="bg-light">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="/">üêæ PetCare Journal</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/admin">Admin Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <h1 class="mb-4 text-center">User ID: <%= userId %> - Detailed Records</h1>

    <!-- Expenses -->
    <div class="card mb-4 shadow rounded">
        <div class="card-header bg-primary-subtle text-dark">
            <h4 class="mb-0">Expenses</h4>
        </div>
        <div class="card-body table-responsive bg-white">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Pet Name</th>
                        <th>Category</th>
                        <th>Vet</th>
                        <th>Amount ($)</th>
                    </tr>
                </thead>
                <tbody>
                    <% expenses.forEach(e => { %>
                        <tr>
                            <td><%= e.id %></td>
                            <td><%= e.pet_name %></td>
                            <td><%= e.categories %></td>
                            <td><%= e.vet %></td>
                            <td><%= e.amount %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Appointments -->
    <div class="card mb-4 shadow rounded">
        <div class="card-header bg-success-subtle text-dark">
            <h4 class="mb-0">Appointments</h4>
        </div>
        <div class="card-body table-responsive bg-white">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Pet Name</th>
                        <th>Clinic</th>
                        <th>Date</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach(a => { %>
                        <tr>
                            <td><%= a.id %></td>
                            <td><%= a.pet_name %></td>
                            <td><%= a.clinic %></td>
                            <td><%= a.date.toISOString().slice(0, 10) %></td>
                            <td><%= a.notes || '‚Äî' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Care Routines -->
    <div class="card mb-4 shadow rounded">
        <div class="card-header bg-warning-subtle text-dark">
            <h4 class="mb-0">Care Routines</h4>
        </div>
        <div class="card-body table-responsive bg-white">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Pet Name</th>
                        <th>Routine Type</th>
                        <th>Date</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <% routines.forEach(r => { %>
                        <tr>
                            <td><%= r.id %></td>
                            <td><%= r.pet_name %></td>
                            <td><%= r.routine_type %></td>
                            <td><%= r.date.toISOString().slice(0, 10) %></td>
                            <td><%= r.notes || '‚Äî' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center">
        <a href="/admin" class="btn btn-secondary mt-3">‚Üê Back to Admin Dashboard</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
