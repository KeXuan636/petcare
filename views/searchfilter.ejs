<!DOCTYPE html>
<html>
<head>
  <title>Pet Care Search & Filter</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Search & Filter Pet Care Items</h1>

  <!-- Search input with search icon -->
  <input type="text" id="myInput" name="query" placeholder="Search items..." value="<%= query || '' %>">

  <!-- Category dropdown -->
  <form method="GET" action="/">
    <select name="category">
      <option value="">All Categories</option>
      <% categories.forEach(cat => { %>
        <option value="<%= cat.id %>" <%= category == cat.id ? 'selected' : '' %>><%= cat.name %></option>
      <% }) %>
    </select>
    <button type="submit">Search</button>
  </form>

  <hr>

  <h2>Results</h2>
  <% if (items.length === 0) { %>
    <p>No items found.</p>
  <% } else { %>
    <ul id="myUL">
      <% items.forEach(item => { %>
        <li>
          <a href="#">
            <strong><%= item.name %></strong><br>
            <%= item.description %><br>
            $<%= item.price.toFixed(2) %>
          </a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>
