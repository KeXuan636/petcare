<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Pet Care Journal - View Records</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        th {
            text-align: center;
        }
    </style>
</head>
<body class="bg-light">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="/">üêæ PetCare Journal</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/view">View</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Pet Care Journal - View Records</h1>

    <!-- Expenses Table -->
    <div class="card mb-4 shadow rounded">
        <div class="card-header bg-primary-subtle text-dark d-flex justify-content-between">
            <h4 class="mb-0">Expenses</h4>
            <a href="/addexpense" class="btn btn-sm btn-primary" style="border: none; background-color: black; color: white;">
                <i class="bi bi-plus-lg"></i> Add
            </a>
        </div>
        <div class="card-body table-responsive bg-white">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th style="width: 5%;">ID</th>
                        <th style="width: 20%;">Pet Name</th>
                        <th style="width: 20%;">Category</th>
                        <th style="width: 15%;">Vet</th>
                        <th style="width: 30%;">Amount ($)</th>
                        <th style="width: 10%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% expenses.forEach(expense => { %>
                        <tr>
                            <td><%= expense.id %></td>
                            <td><%= expense.pet_name %></td>
                            <td><%= expense.categories %></td>
                            <td><%= expense.vet %></td>
                            <td><%= expense.amount %></td>
                            <td>
                                <form action="/deleteExpense/<%= expense.id %>" method="POST" onsubmit="return confirm('Delete this expense?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Appointments Table -->
    <div class="card mb-4 shadow rounded">
        <div class="card-header bg-success-subtle text-dark d-flex justify-content-between">
            <h4 class="mb-0">Appointments</h4>
            <a href="/addappointment" class="btn btn-sm btn-primary" style="border: none; background-color: black; color: white;">
                <i class="bi bi-plus-lg"></i> Add
            </a>
        </div>
        <div class="card-body table-responsive bg-white">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th style="width: 5%;">ID</th>
                        <th style="width: 20%;">Pet Name</th>
                        <th style="width: 20%;">Clinic</th>
                        <th style="width: 15%;">Date</th>
                        <th style="width: 30%;">Notes</th>
                        <th style="width: 10%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach(appointment => { %>
                        <tr>
                            <td><%= appointment.id %></td>
                            <td><%= appointment.pet_name %></td>
                            <td><%= appointment.clinic %></td>
                            <td><%= appointment.date.toISOString().slice(0, 10) %></td>
                            <td><%= appointment.notes || '‚Äî' %></td>
                            <td>
                                <form action="/deleteAppointment/<%= appointment.id %>" method="POST" onsubmit="return confirm('Delete this appointment?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Care Routines Table -->
    <div class="card mb-4 shadow rounded">
        <div class="card-header bg-warning-subtle text-dark d-flex justify-content-between">
            <h4 class="mb-0">Care Routines</h4>
            <a href="/addcareroutine" class="btn btn-sm btn-primary" style="border: none; background-color: black; color: white;">
                <i class="bi bi-plus-lg"></i> Add
            </a>
        </div>
        <div class="card-body table-responsive bg-white">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th style="width: 5%;">ID</th>
                        <th style="width: 20%;">Pet Name</th>
                        <th style="width: 20%;">Routine Type</th>
                        <th style="width: 15%;">Date</th>
                        <th style="width: 30%;">Notes</th>
                        <th style="width: 10%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% routines.forEach(routine => { %>
                        <tr>
                            <td><%= routine.id %></td>
                            <td><%= routine.pet_name %></td>
                            <td><%= routine.routine_type %></td>
                            <td><%= routine.date.toISOString().slice(0, 10) %></td>
                            <td><%= routine.notes || '‚Äî' %></td>
                            <td>
                                <form action="/deleteRoutine/<%= routine.id %>" method="POST" onsubmit="return confirm('Delete this routine?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
