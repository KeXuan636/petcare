<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Pet Care Journal - User Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        th {
            text-align: center;
        }
    </style>
</head>
<body class="bg-light">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="/">üêæ PetCare Journal</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Welcome, <%= user.username %>!</h1>

<!-- User Expenses Table -->
<div class="card mb-4 shadow rounded">
    <div class="card-header bg-primary-subtle text-dark d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Your Expenses</h4>
        <a href="/addexpense" class="btn btn-primary btn-sm">Add</a>
    </div>
    <div class="card-body table-responsive bg-white">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Pet Name</th>
                    <th>Category</th>
                    <th>Vet</th>
                    <th>Amount ($)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(e => { %>
                    <tr>
                        <td><%= e.id %></td>
                        <td><%= e.pet_name %></td>
                        <td><%= e.categories %></td>
                        <td><%= e.vet %></td>
                        <td><%= e.amount %></td>
                        <td>
                            <form action="/deleteExpense/<%= e.id %>" method="POST" onsubmit="return confirm('Delete this expense?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<!-- User Appointments Table -->
<div class="card mb-4 shadow rounded">
    <div class="card-header bg-success-subtle text-dark d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Your Appointments</h4>
        <a href="/addappointment" class="btn btn-success btn-sm">Add</a>
    </div>
    <div class="card-body table-responsive bg-white">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Pet Name</th>
                    <th>Clinic</th>
                    <th>Date</th>
                    <th>Notes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% appointments.forEach(a => { %>
                    <tr>
                        <td><%= a.id %></td>
                        <td><%= a.pet_name %></td>
                        <td><%= a.clinic %></td>
                        <td><%= a.date.toISOString().slice(0, 10) %></td>
                        <td><%= a.notes || '‚Äî' %></td>
                        <td>
                            <form action="/deleteAppointment/<%= a.id %>" method="POST" onsubmit="return confirm('Delete this appointment?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<!-- User Care Routines Table -->
<div class="card mb-4 shadow rounded">
    <div class="card-header bg-warning-subtle text-dark d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Your Care Routines</h4>
        <a href="/addcareroutine" class="btn btn-warning btn-sm">Add</a>
    </div>
    <div class="card-body table-responsive bg-white">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Pet Name</th>
                    <th>Routine Type</th>
                    <th>Date</th>
                    <th>Notes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% routines.forEach(r => { %>
                    <tr>
                        <td><%= r.id %></td>
                        <td><%= r.pet_name %></td>
                        <td><%= r.routine_type %></td>
                        <td><%= r.date.toISOString().slice(0, 10) %></td>
                        <td><%= r.notes || '‚Äî' %></td>
                        <td>
                            <form action="/deleteRoutine/<%= r.id %>" method="POST" onsubmit="return confirm('Delete this routine?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
